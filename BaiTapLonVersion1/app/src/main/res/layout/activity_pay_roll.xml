<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TinhCong.PayRollActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:text="Month"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>
    </LinearLayout>

<!--    <GridView-->
<!--        android:id="@+id/gv"-->
<!--        android:layout_margin="2dp"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:numColumns="7"-->
<!--        android:horizontalSpacing="2dp" />-->
<!--    <ListView-->

    <LinearLayout
        android:id="@+id/payroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:weightSum="5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Day work"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#ff8a22"/>
            <TextView
                android:id="@+id/txt_day_work"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="right"
                android:text="0"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#ff8a22"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:weightSum="5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Day off"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#ff8a22"/>
            <TextView
                android:id="@+id/txt_day_off"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="right"
                android:text="0"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#ff8a22"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:weightSum="5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Base salary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#ff8a22"/>
            <TextView
                android:id="@+id/txt_base_salary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="right"
                android:text="4420000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#ff8a22"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:weightSum="5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="coeffic"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#ff8a22"/>
            <TextView
                android:id="@+id/txt_coefficient"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="right"
                android:text="0.0"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#ff8a22"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:weightSum="5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Sum"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#ff8a22"/>
            <TextView
                android:id="@+id/txt_sum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="right"
                android:text="0"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#ff8a22"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/bt_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#ff8a22"
        android:elevation="10dp"
        android:text="Detail"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold" />
    <ListView
        android:id="@+id/lv_day"
        android:layout_margin="10dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>